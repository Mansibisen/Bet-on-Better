<%- include("./partials/indexNav.ejs"); %>
<div class="row mt-5 mb-5">
    <div class="col-md-6 m-auto">
        <div
            class="card card-body border-dark"
            style="background-color: lightgrey"
        >
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <%- include('./partials/messages.ejs'); %>
            <form action="/register" method="POST">
                <div class="form-group">
                    <label for="name"> Name </label>
                    <input
                        type="text"
                        name="name"
                        id="name"
                        class="form-control"
                        placeholder="Enter Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="email"> Email </label>
                    <input
                        type="email"
                        name="email"
                        id="email"
                        class="form-control"
                        placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="password"> Password </label>
                    <input
                        type="password"
                        name="password"
                        id="password"
                        class="form-control"
                        placeholder="Enter Password"
                        value="<%= typeof password != 'undefined' ? password : '' %>"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="password2"> Confirm Password </label>
                    <input
                        type="password"
                        name="password2"
                        id="password2"
                        class="form-control"
                        placeholder="Re-enter password"
                        value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="address"> Address </label>
                    <input
                        type="text"
                        name="address"
                        id="address"
                        class="form-control"
                        placeholder="Enter your address"
                        value="<%= typeof address != 'undefined' ? address : '' %>"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="contact"> Contact </label>
                    <input
                        type="number"
                        name="contact"
                        id="contact"
                        class="form-control"
                        placeholder="Enter your contact number"
                        value="<%= typeof contact != 'undefined' ? contact : '' %>"
                        required
                    />
                </div>
                <div class="form-group">
                    <label for="role"> Choose your role </label> <br />
                    <input type="radio" name="role" id="donor" value="donor" />
                    <label for="donor"> Donor </label> <br />
                    <input
                        type="radio"
                        name="role"
                        id="receiver"
                        value="receiver"
                    />
                    <label for="receiver"> Receiver </label> <br />
                </div>
                <button type="submit" class="btn btn-success btn-block">
                    Register
                </button>
            </form>
        </div>
    </div>
</div>
