<%- include('./partials/messages.ejs'); %>
<%-include("partials/header.ejs")%>

<h1 class="mb-3 mt-2 text-center"> <%= type %> Requirement </h1>
<% if(type === "Add") { %>
    <form action="/charity/requirements" method="POST">
        <%- include('./partials/requirementsForm') %>
    </form>
<% } else { %>
    <form action="/charity/<%= requirement.id %>?_method=PUT" method="POST">
        <%- include('./partials/requirementsForm') %>
    </form>
<% } %>

<%-include("partials/footer.ejs")%>