<%- include('./partials/messages.ejs'); %>
<%-include("partials/header.ejs")%>
<link rel="stylesheet" href="/CharityRequirements.css">
<div>
    <ul>
        <li>
            <a href="dashboard">Home</a>
        </li>
        <li>
            <a href="requirements/add">ADD</a>
        </li>

        <li style=' float: "right" '>
            <a class="active" href="#about">
                About
            </a>
        </li>
    </ul>
    <br></br>
    <div class="container">
        <% var max = data.length %>
        <% for( var i=0; i< max; i++){%>
        <div class="item">
            <h1><%=data[i].material%></h1>
            <h3><%=data[i].quantity%></h3>
            <p><%=data[i].description%></p>
            <a href="/charity/requirements/update/<%= data[i].id %>" class="btn btn-info btn-lg mr-2">Update</a>
            <form action="/charity/<%= data[i].id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
            </form>
        </div>
        <%}%>
    </div>
    
</div>






<%-include("partials/footer.ejs")%>
