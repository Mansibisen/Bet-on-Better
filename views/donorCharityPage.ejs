        <label for="reqItem">Select a material : </label>

        <select name="reqItem" id="reqItem">
        <% req.forEach(item=>{ %>
   
            <option value="<%=item.material %>"><%= item.material%></option>
            <div id="item-desc"><%=item.description%></div>
            
            <%  }) %> 

