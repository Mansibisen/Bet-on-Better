            <% req.forEach(item=>{ %>
           
                <li>
                    <h4><%=item.material %> : <%=item.quantity %></h4>
                    <p><%= item.description %></p>
                </li>
        
            <%  }) %>
            <button id="donateBtn">Donate Now!</button>
    <% } else { %>
            <p>No requirements presently. Kindly browse other charities</p>
    <% } %>
